<body class="container bg-darkCobalt fg-white" >
    <%- include("_partial/header.ejs") %>

    <main class="glass-plate center-container">
        <h2><%- page.tag %></h2>
        <ul>
        <% site.posts.sort('date', -1).filter( post=> post.tags.data.map(x=>x.name).includes(page.tag) ).forEach( post=> { %>
            <li> <a href="<%= config.root %><%= post.path %>"><%- post.title %></a> </li>
        <%  }); %>
        </ul>
    </main>
</body>